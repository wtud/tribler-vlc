<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TorrentSelectActivity" >

    <TextView 
	    android:id="@+id/torrentselect_text"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/intro_text"/>
    
    <LinearLayout 
        android:id="@+id/buttons"
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_centerHorizontal="true"
	    android:layout_below="@+id/torrentselect_text"
	    android:paddingTop="5dp"
	    style="@android:attr/buttonBarStyle">
        
        <Button
        android:id="@+id/magnet_search_buttton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="magnetSearch"
        android:text="@string/btn_search_magnet"
        style="@android:attr/buttonBarButtonStyle"/>
    
   		<Button
        android:id="@+id/torrentselect_buttton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectTorrent"
        android:text="@string/btn_select_torrent" 
        style="@android:attr/buttonBarButtonStyle"/>
    </LinearLayout>
   
	<LinearLayout
	    android:id="@+id/poster_buttons"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/buttons"
	    android:layout_centerHorizontal="true"
	    android:orientation="horizontal"
	    android:paddingTop="5dp" >
	    
	    <ImageButton
	        android:id="@+id/magnet_img_1"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:src="@drawable/tears_of_steel" 
	        android:contentDescription="@string/magnet1"
	        android:layout_weight="1"
	        android:onClick="openMagnetImage"
	        android:scaleType="fitCenter"
	       	android:padding="5dp"
	       	android:background="@null"/>

	    <ImageButton
	        android:id="@+id/magnet_img_2"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="@null"
	        android:contentDescription="@string/magnet2"
	        android:onClick="openMagnetImage"
	        android:padding="5dp"
	        android:scaleType="fitCenter"
	        android:src="@drawable/sintel" />

		<ImageButton
		    android:id="@+id/magnet_img_3"
		    android:layout_width="0dp"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:background="@null"
		    android:contentDescription="@string/magnet3"
		    android:onClick="openMagnetImage"
		    android:padding="5dp"
		    android:scaleType="fitCenter"
		    android:src="@drawable/a_lonely_place_for_dying" />

	</LinearLayout>

